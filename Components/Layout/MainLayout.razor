@inherits LayoutComponentBase
@using JournalDaily.Services
@using Microsoft.AspNetCore.Components
@inject ThemeService ThemeService
@implements IDisposable

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="theme-container">
                <ThemeSelector />
            </div>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style id="theme-variables">
    @GetThemeStyles()
</style>

<style>
    :root {
        --primary-color: #007bff;
        --primary-dark: #0056b3;
        --primary-light: #e7f1ff;
        --secondary-color: #6c757d;
        --secondary-dark: #5a6268;
        --secondary-light: #f8f9fa;
        --background-color: #ffffff;
        --surface-color: #f8f9fa;
        --border-color: #dee2e6;
        --text-color: #333333;
        --text-secondary-color: #666666;
        --text-tertiary-color: #999999;
        --success-color: #51cf66;
        --warning-color: #ffd43b;
        --error-color: #ff6b6b;
        --info-color: #3498db;
        --gradient-start: #667eea;
        --gradient-end: #764ba2;
    }

    .page {
        display: flex;
        height: 100vh;
        background-color: var(--background-color);
        color: var(--text-color);
    }

    .sidebar {
        width: 250px;
        background-color: var(--surface-color);
        border-right: 1px solid var(--border-color);
        overflow-y: auto;
    }

    main {
        flex: 1;
        display: flex;
        flex-direction: column;
        width: 100%;
        background-color: var(--background-color);
    }

    .top-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--surface-color);
        border-bottom: 1px solid var(--border-color);
        padding: 12px 16px;
        gap: 20px;
    }

    .top-row a {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
    }

    .top-row a:hover {
        color: var(--primary-dark);
    }

    .theme-container {
        flex: 1;
        max-width: 400px;
    }

    .content {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
    }

    @@media (max-width: 768px) {
        .page {
            flex-direction: column;
        }

        .sidebar {
            width: 100%;
            border-right: none;
            border-bottom: 1px solid var(--border-color);
            max-height: 60px;
            overflow-x: auto;
            overflow-y: hidden;
        }

        .top-row {
            flex-wrap: wrap;
            gap: 10px;
        }

        .theme-container {
            max-width: 100%;
        }
    }
</style>

@code {
    protected override void OnInitialized()
    {
        ThemeService.ThemeChanged += OnThemeChanged;
    }

    private void OnThemeChanged(object? sender, ThemeChangedEventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }

    private MarkupString GetThemeStyles()
    {
        var colors = ThemeService.CurrentTheme.Colors;
        var styles = $@":root {{
            --primary-color: {colors.PrimaryColor};
            --primary-dark: {colors.PrimaryDark};
            --primary-light: {colors.PrimaryLight};
            --secondary-color: {colors.SecondaryColor};
            --secondary-dark: {colors.SecondaryDark};
            --secondary-light: {colors.SecondaryLight};
            --background-color: {colors.BackgroundColor};
            --surface-color: {colors.SurfaceColor};
            --border-color: {colors.BorderColor};
            --text-color: {colors.TextColor};
            --text-secondary-color: {colors.TextSecondaryColor};
            --text-tertiary-color: {colors.TextTertiaryColor};
            --success-color: {colors.SuccessColor};
            --warning-color: {colors.WarningColor};
            --error-color: {colors.ErrorColor};
            --info-color: {colors.InfoColor};
            --gradient-start: {colors.GradientStart};
            --gradient-end: {colors.GradientEnd};
        }}";
        return (MarkupString)styles;
    }

    void IDisposable.Dispose()
    {
        ThemeService.ThemeChanged -= OnThemeChanged;
    }
}
